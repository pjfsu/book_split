# Stage 1: Install runtime deps
FROM python:3-slim-bookworm AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN groupadd --system appuser \
 && useradd --system --gid appuser --no-create-home --shell /usr/sbin/nologin appuser

WORKDIR /app

COPY podman/app/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Stage 2: Build final runtime image
FROM base AS final

COPY podman/app/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

COPY --chown=appuser:appuser app/ .

USER appuser

EXPOSE 8080

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
